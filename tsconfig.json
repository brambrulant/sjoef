{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "baseUrl": "",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@db/*": [
        "db/*"
      ],
      "@types/*": [
        "./src/app/types/*"
      ],
      "@components/*": [
        "./src/app/components/*"
      ],
      "@functions/*": [
        "./src/app/functions/*"
      ]
    }
  },
  "include": [
    "./src",
    "./db/*",
    "./dist/types/**/*.ts",
    "./next-env.d.ts",
    ".next/types/**/*.ts",
    "./drizzle.config.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
