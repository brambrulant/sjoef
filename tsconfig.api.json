{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./api/dist",
    "baseUrl": "./api",
    "paths": {
      "*": ["api/index.ts"],
  },
},
    "include": ["api/**/*"],
    "exclude": ["./node_modules", "**/*.spec.ts"]
}
